# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# User Pages
GET     /login                      controllers.Application.getlogin()
POST    /login                      controllers.Application.login()

GET     /signup                     controllers.Application.signup()
POST    /signup                     controllers.Application.newUser()

GET     /logout                     controllers.Application.logout()
GET     /newPlaylist                controllers.Application.createPlaylist()

GET     /Users/:id                  controllers.UserProfile.showProfile(id: Long)


# Playlist Pages
GET     /playlist                   controllers.Playlists.showList(id ?= null)

# API ?

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

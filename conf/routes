# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# User Pages
GET     /login                      controllers.Application.getlogin()
POST    /login                      controllers.Application.login()

GET     /signup                     controllers.Application.signup()
POST    /signup                     controllers.Application.newUser()

GET     /logout                     controllers.Application.logout()

GET     /Users/:id                  controllers.UserProfile.showProfile(id: Long)


# Playlist Pages
POST    /playlist                   controllers.Playlists.create()
GET     /playlist                   controllers.Playlists.getByUID(id ?= null)

# JSON
GET     /json/playlist/public        controllers.json.PlaylistJSON.getPublicPlaylist()

# javascript Router
GET     /javascriptRoutes           controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
